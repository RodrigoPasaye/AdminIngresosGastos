@model AdminIngresosGastos.Models.Categoria

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar</h1>

<h3>¿Estás seguro de que quieres eliminar esto?</h3>
<div>
    <h4>Categoria</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form>
                <div class="form-group">
                    <label asp-for="NombreCategoria" class="control-label"></label>
                    <input asp-for="NombreCategoria" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="Tipo" class="control-label"></label>
                    <select asp-for="Tipo" class="form-control" disabled>
                        <option value="IN">Ingreso</option>
                        <option value="GA">Gasto</option>
                    </select>
                </div>
                <div class="form-group">
                    <label class="control-label">Estado</label>
                    <select asp-for="Estado" class="form-control" disabled>
                        <option value=true>Activo</option>
                        <option value=false>Inactivo</option>
                    </select>
                </div>
            </form>
        </div>
    </div>
    
    <br />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a class="btn btn-primary" asp-action="Index">Regresar</a> | 
        <input type="submit" value="Eliminar" class="btn btn-danger" />        
    </form>
</div>
